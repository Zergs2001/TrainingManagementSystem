@using Microsoft.AspNet.Identity
@model MatRoleClaim.Models.ViewModels.IndexViewModel
@{
    ViewBag.Title = "Manage";
    var q = ViewBag.DataCouser;

}
<div class="m-5">
    @if (ViewBag.TrainerCount != 0)
    {
        <div class="row mb-5">
            @if (q != null)
            {
                <div class="card col-12">
                    <div class="card-body">
                        <form action="/" method="post">
                            <div class="row">


                                <div class="form-group col-4">
                                    <label class="control-label col-md-12">Name</label>
                                    <div class="col-md-12">
                                        <input type="text" name="name" value="@q.Name" class="form-control" />
                                    </div>
                                </div>
                                <div class="form-group col-4">
                                    <label class="control-label col-md-12">Trainer name</label>
                                    <div class="col-md-12">
                                        <input type="text" name="name" value="@User.Identity.GetUserName()" class="form-control" />
                                    </div>
                                </div>
                                <div class="form-group col-4">
                                    <label class="control-label col-md-12">Sysllabus</label>
                                    <div class="col-md-12">
                                        <input type="text" name="name" value="@q.SysllabusLink" class="form-control" />
                                    </div>
                                </div>

                            </div>
                        </form>
                    </div>
                </div>
            }
            else
            {
                <div class="card col-12">
                    <div class="card-body">
                        <form action="/" method="post">
                            <div class="row">
                                <div class="form-group col-4">
                                    <label class="control-label col-md-12">Name</label>
                                    <div class="col-md-12">
                                        <input type="text" name="name" value="" class="form-control" />
                                    </div>
                                </div>
                                <div class="form-group col-4">
                                    <label class="control-label col-md-12">Trainer name</label>
                                    <div class="col-md-12">
                                        <input type="text" name="name" value="" class="form-control" />
                                    </div>
                                </div>
                                <div class="form-group col-4">
                                    <label class="control-label col-md-12">Sysllabus</label>
                                    <div class="col-md-12">
                                        <input type="text" name="name" value="" class="form-control" />
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            }

        </div>
        <div class="row">
            @foreach (var item in ViewBag.Trainer)
            {
                <div class="card col-3 m-1">
                    <div class="card-body">
                        <h5 class="card-title text-center">@item.Cource.Name</h5>
                        <br />
                        <br />
                        <br />
                        <br />
                        <br />
                        <br />
                        <br />
                        <br />
                        <p class="text-center">
                            @Html.ActionLink("View", "Index", new { idcouse = item.CourceId })
                        </p>
                    </div>
                </div>
            }
        </div>
    }

