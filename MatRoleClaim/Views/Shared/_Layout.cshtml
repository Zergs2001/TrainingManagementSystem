@using Microsoft.AspNet.Identity
@{ 
    List<string> currentUserRoles = ViewBag.CurrentUserRoles;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Training Mannager System</title>
    @Styles.Render("~/Content/css")

</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        @Html.ActionLink("Training Mannager System", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarColor01">
            <ul class="navbar-nav mr-auto">
                @if (Request.IsAuthenticated)
                {
                    <li class="nav-item active">
                        <a class="nav-link" href="@Url.Action("Index", "UserRoles")">Home <span class="sr-only">(current)</span></a>
                    </li>
                    if (currentUserRoles.Where(x => x.Contains("spadmin") || x.Contains("Administrator") || x.Contains("Training Staff")).Count() > 0)
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("ManageAccount", "UserRoles")">Manager Account</a>
                        </li>
                        if (currentUserRoles.Where(x => x.Contains("spadmin") || x.Contains("Administrator")).Count() > 0)
                        {
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("Index", "Roles")">Manager Account Level</a>
                            </li>
                        }
                        if (currentUserRoles.Where(x => x.Contains("spadmin") || x.Contains("Training Staff")).Count() > 0)
                        {
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("Index", "CourseCategories")">Manager Cousce Category</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("Index", "Courses")">Manager Cousce</a>
                            </li>
                        }
                        if (currentUserRoles.Where(x => x.Contains("spadmin") || x.Contains("Administrator")).Count()>0)
                        {
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("Index", "RoleClaims")">Setting Accout Level</a>
                            </li>
                        }
                    }

                }
                @*<li class="nav-item">
            <a class="nav-link" href="@Url.Action("Index", "Admin")">Admin</a>
        </li>*@
                @Html.Partial("_LoginPartial")
            </ul>
            @*<form class="form-inline my-2 my-lg-0">
                    <input class="form-control mr-sm-2" type="text" placeholder="Search">
                    <button class="btn btn-secondary my-2 my-sm-0" type="submit">Search</button>
                </form>*@
        </div>
    </nav>


    <div class="container-fluid body-content">
        @RenderBody()
        @*<hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - Training Mannager System</p>
            </footer>*@
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
