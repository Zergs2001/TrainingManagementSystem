@model IEnumerable<MatRoleClaim.Models.ViewModels.UserRolesViewModel>

@{
    ViewBag.Title = "Home Page Admin";
}
<div class="m-5">
    <h2>Manage Training Staff Accounts</h2>
    <table class="table">
        <tbody>
            @foreach (var user in Model)
            {
                var check = user.Roles.Where(x => x.Name == "Training Staff").ToList();
                if (check.Count > 0)
                {
                    <tr class="col-12">
                        <td class="col-2">
                            @Html.DisplayFor(modelItem => user.UserEmail)
                        </td>
                        <td class="col-2">
                            @Html.DisplayFor(modelItem => user.UserName)
                        </td>
                        <td class="col-2">
                            **********
                        </td>
                        <td class="col-3">
                            <ul style="font-size:12px" class="list-group">
                                @foreach (var role in user.Roles)
                                {
                                    <li class="list-group-item py-1 d-flex justify-content-between align-items-center">
                                        @string.Format("{0}", role.Name)
                                    </li>
                                }
                            </ul>
                        </td>
                        <td class="col-1">
                            @Html.ActionLink("Edit", "Edit", new { id = user.UserId }) -
                            @Html.ActionLink("Show", "Details", new { id = user.UserId })
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>

