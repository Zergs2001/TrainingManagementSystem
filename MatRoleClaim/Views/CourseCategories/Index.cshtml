@model IEnumerable<MatRoleClaim.Models.CourseCategory>

@{
    ViewBag.Title = "Manage Cource Category";
}

<div class="m-5">
    <h2>Manage Cource Category</h2>

    <p>
        @Html.ActionLink("Create New", "Create")
    </p>


    @foreach (var item in Model)
    {
        <div class="card col-12 m-2">
            <div class="card-body">
                <h5 class="card-title text-center">@Html.DisplayFor(modelItem => item.Name)</h5>
                <p class="text-center">
                    @Html.ActionLink("View", "Details", new { id = item.Id })
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id })
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </p>
                <div class="row">
                    @foreach (var item1 in item.Cources)
                    {
                        <div class="card col-2 m-2">
                            <div class="card-body">
                                <h5 class="card-title text-center">@item1.Name</h5>
                                <br />
                                <br />
                                <br />
                                <br />
                                <p class="text-center">
                                    <a href="@Url.Action("Details", "Cources", new { id = item1.Id })">View</a>
                                    <a href="@Url.Action("Edit", "Cources", new { id = item1.Id })">Edit</a>
                                    <a href="@Url.Action("Delete", "Cources", new { id = item1.Id })">Delete</a>
                                </p>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    }
</div>
